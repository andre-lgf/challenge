<div class='w-full'>
  <%= render CardComponent.new(footer: link_to(t('actions.back'),  organizations_path, data: {turbo_frame: '_top'}, class: 'default-button')) do %>
    <%= render Cards::SectionComponent.new do %>
      <div class='grid justify-items-center'>
        <%= image_tag @organization.image_url, class: 'rounded-full w-60 mb-5' if @organization.image_url %>
        <div class='text-xl font-bold'><%= @organization.name %></div>
        <div class='grid gap-3 lg:grid-cols-6 md:grid-cols-2 w-full my-5'>
          <div class='grid justify-items-center my-5'>
            <i class='ti ti-brand-github text-2xl p-4 rounded-full bg-black text-white'></i>
            <span class='text-slate-700 mt-2 hover:text-blue-800'><%= link_to t('actions.access'), @organization.organization_url %></span>
          </div>
          <div class='grid justify-items-center my-5'>
            <i class='ti ti-world text-2xl p-4 rounded-full bg-slate-500 text-white'></i>
            <span class='text-slate-700 mt-2'><%= @organization.num_public_repos || 0 %> Public Repos</span>
          </div>
          <div class='grid justify-items-center my-5'>
            <i class='ti ti-lock text-2xl p-4 rounded-full bg-slate-500 text-white'></i>
            <span class='text-slate-700 mt-2'><%= @organization.num_public_gists || 0 %> Private Repos</span>
          </div>
          <div class='grid justify-items-center my-5'>
            <i class='ti ti-user-plus text-2xl p-4 rounded-full bg-slate-500 text-white'></i>
            <span class='text-slate-700 mt-2'><%= @organization.followers || 0 %> Followers</span>
          </div>
          <div class='grid justify-items-center my-5'>
            <i class='ti ti-bell-ringing text-2xl p-4 rounded-full bg-slate-500 text-white'></i>
            <span class='text-slate-700 mt-2'><%= @organization.following || 0 %> Following</span>
          </div>
          <div class='grid justify-items-center my-5'>
            <i class='ti ti-users text-2xl p-4 rounded-full bg-slate-500 text-white'></i>
            <span class='text-slate-700 mt-2'><%= @organization.num_members || 0 %> Membros</span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
